<body>

  <div class="header">Auto Booking</div>

  <div class="form-container">
    <form action="/book" method="post">
        <div class="input-group">
  <input type="text" id="passenger-name" name="name" placeholder=" " required>
  <label for="passenger-name">Passenger Name</label>
        </div>

      <div class="input-group">
        <input type="text" id="from" name="from" placeholder="You also type tamil or tanglish" required>
        <label for="from">From</label>
      </div>

      <div class="input-group">
        <input type="text" id="to"  name="to" required>
        <label for="to">To</label>
      </div>
      <div class="input-group">
        <input type="text" name="autonumber" value="{{autonumber}}" readonly />
           <label for="autonumber">Booking Auto number</label>
      </div>
    

      
      <div class="input-group">
  <input type="tel" id="passenger-phone" name="phone" required pattern="[0-9]{10}">
  <label for="passenger-phone">Passenger Phone number</label>
          </div>
 
        <div class="input-group" style="flex: 1;">
          <input type="time" id="time" name="time" placeholder=" ">
          <label for="time">Time</label>
        </div>
         <button type="button" class="now-btn" onclick="setCurrentDateTime()">Current time</button>
      </div>

     

      <button class="submit-btn" type="submit">Book Now</button>
    </form>
  </div>

  <script>
    const now = new Date();
const dateString = now.toISOString().split('T')[0]; // returns YYYY-MM-DD
document.getElementById('date').value = dateString;
    function setCurrentDateTime() {
      const now = new Date();

      // Format date as YYYY-MM-DD
      const year = now.getFullYear();
      const month = String(now.getMonth() + 1).padStart(2, '0');
      const day = String(now.getDate()).padStart(2, '0');
      const dateString = `${year}-${month}-${day}`;

      // Format time as HH:MM (24-hour)
      const hours = String(now.getHours()).padStart(2, '0');
      const minutes = String(now.getMinutes()).padStart(2, '0');
      const timeString = `${hours}:${minutes}`;

      
      document.getElementById('time').value = timeString;
    }
  </script>

