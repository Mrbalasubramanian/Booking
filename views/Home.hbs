body {
  margin: 0;
  font-family: Arial, sans-serif;
  background: linear-gradient(to right, #00c6ff, #0072ff);
  color: #fff;
  padding: 0;
}

.header {
  text-align: center;
  font-size: 2rem;
  padding: 20px 10px;
  background: rgba(255, 255, 255, 0.1);
  font-weight: bold;
}

.form-container {
  max-width: 500px;
  margin: 0 auto;
  padding: 30px 20px;
  background-color: rgba(255, 255, 255, 0.15);
  border-radius: 15px;
  box-shadow: 0 0 10px #00000040;
}

.input-group {
  position: relative;
  margin-bottom: 25px;
}

.input-group input {
  width: 100%;
  padding: 12px 12px;
  font-size: 1rem;
  border: none;
  border-radius: 8px;
  outline: none;
}

.input-group label {
  position: absolute;
  top: -14px;
  left: 10px;
  background-color: rgba(255,255,255,0.1);
  padding: 0 5px;
  font-size: 0.85rem;
  color: #fff;
}

button.submit-btn {
  width: 100%;
  padding: 12px;
  background-color: #fff;
  color: #0072ff;
  border: none;
  border-radius: 8px;
  font-size: 1rem;
  cursor: pointer;
  transition: background 0.3s;
}

button.submit-btn:hover {
  background-color: #e6e6e6;
}

.now-btn {
  background-color: #ffffff;
  color: #0072ff;
  padding: 8px 15px;
  border: none;
  border-radius: 6px;
  font-size: 0.9rem;
  margin-top: 5px;
  cursor: pointer;
}

/* ✅ Responsive Design */
@media screen and (max-width: 500px) {
  .form-container {
    padding: 20px 10px;
    margin: 10px;
  }

  .header {
    font-size: 1.5rem;
  }

  .now-btn,
  .submit-btn {
    font-size: 0.95rem;
    padding: 10px;
  }

  .input-group label {
    font-size: 0.75rem;
  }
}
.form-container {
  animation: fadeIn 1.2s ease-in-out;
}
